import sys
from base64 import b64encode, b64decode

input = bytes(sys.argv[1], encoding="utf-8")
mode =  sys.argv[2] if len(sys.argv) >= 3 else "encode"
result: bytes = bytes()
if mode and mode == "encode":
    result = b64encode(input)
elif mode == "decode":
    result = b64decode(input)

print("Value to be returned to the user: ", str(result, encoding="utf-8"), end="")
